{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "title": "GDP v Life Expectancy",
  "data": {
    "url": "https://raw.githubusercontent.com/praneshdm/FIT3179-assignment-2/main/data/life-expectancy-2015.csv"
  },
  "transform": [
    {"filter": "datum.GDP> 0"},
    {"filter": "datum.Population > Population_Above"},
    {"filter": "datum.Population > 1000000"}
  ],
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    }
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "GDP",
      "type": "quantitative",
      "title": "GDP (USD per Capita)",
      "axis": {"tickCount": 4},
      "scale": {"type": "log", "domain": [1, 100000]}
    },
    "y": {
      "field": "Life_Expectancy",
      "type": "quantitative",
      "title": "Life Expectancy",
      "axis": {"tickCount": 6},
      "scale": {"type": "linear", "domain": [50, 100]}
    },
    "opacity": {"value": 0.6},
    "color": {
      "field": "Status",
      "type": "nominal",
      "scale": {
        "domain": ["Developed", "Not Developed"],
        "range": ["#ff7f00", "#377eb8"]
      }
    },
    "size": {
      "field": "Population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
        "range": [10, 50, 150, 200, 300, 400]
      },
      "legend": {"format": ".1s"}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Population", "type": "quantitative", "format": ",.2d"},
      {"field": "GDP", "type": "quantitative", "format": ".2d"},
      {"field": "Status", "type": "nomial"}
    ]
  },
  "config": {}
}